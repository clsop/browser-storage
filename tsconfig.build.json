{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "es6"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./lib",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": false,
        "strict": false,
        "typeRoots": [
            "node_modules/@types",
            "./src/typings"
        ]
    },
    "exclude": [
        "node_modules",
        "lib",
        "test"
    ]
}