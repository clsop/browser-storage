{
  "name": "@shanknet/browser-storage",
  "version": "0.0.3",
  "description": "Api wrapper for different browser storage apis with fallbacks.",
  "type": "commonjs",
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.js",
  "types": "./typings/browser-storage/index.d.ts",
  "author": "clsop <shanknet85@gmail.com>",
  "license": "ISC",
  "files": [
    "dist"
  ],
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "sourceMap": true,
    "instrument": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/test/**/*.*"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage"
  },
  "scripts": {
    "build": "npm build-cjs && npm build-esm",
    "build-cjs": "tsc -p tsconfig/tsconfig.cjs.json",
    "build-esm": "tsc -p tsconfig/tsconfig.esm.json",
    "test": "mocha",
    "test:coverage": "nyc npm test"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@testdeck/mocha": "^0.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.1",
    "@types/sinon": "^10.0.13",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "should": "^13.2.3",
    "sinon": "^14.0.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
