{
  "name": "@shanknet/browser-storage",
  "version": "0.0.3",
  "description": "Api wrapper for different browser storage apis with fallbacks.",
  "main": "lib/index.js",
  "typings": "typings/browser-storage/index.d.ts",
  "author": "clsop <shanknet85@gmail.com>",
  "license": "ISC",
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "sourceMap": true,
    "instrument": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/test/**/*.*"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
