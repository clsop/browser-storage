    "test:coverage": "nyc pnpm test"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.1",
    "@types/sinon": "^10.0.13",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "should": "^13.2.3",
    "sinon": "^14.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
